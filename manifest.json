{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "description": "HelpMeOut",
    "icons": {
        "128": "/images/icon.png"
    },

    "background": {
        "service_worker": "/background/background.js"
    },

    "action": {
        "default_popup": "/popup/index.html",
        "default_icon": {
            "16": "/images/icon.png"
        }

    },

    "host_permissions": [
        "http://*/",
        "https://*/*"
    ],

    "permissions": [
        "scripting",
        "tabs",
        "activeTab"
    ],
    "version": "1.0.0"
}